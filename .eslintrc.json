{
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-var": "warn",
        "consistent-return":"error",
        "indent"           : ["warn", 4,  { "SwitchCase": 1 }],
        "no-else-return"   : "warn",
        "semi"             : ["warn", "always"],
        "space-unary-ops"  :"error"
    }
}